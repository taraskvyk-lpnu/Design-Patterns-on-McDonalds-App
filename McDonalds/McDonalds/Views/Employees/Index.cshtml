@model List<McDonalds.EmployeeFacade.Employee>

<!DOCTYPE html>
<html>
<head>
    <title>Employee List</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Employee list</h1>
        <div class="mb-2">
            <a asp-action="AddEmployee" class="btn btn-primary">Add employee</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">FullName</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.FullName</td>
                        <td>@employee.Email</td>
                        <td>@employee.Role.ToString()</td>
                        <td>
                            <a asp-action="EditEmployee" asp-route-id="@employee.Id"  class="btn btn-info btn-sm">Edit</a>
                            <a asp-action="RemoveEmployee" asp-route-id="@employee.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
